{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],  
    "module": "ESNext",
    "moduleResolution": "node",  
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]  
  },
  "include": [
    "vite.config.ts",
    "vitest.config.ts",  
    "**/*.config.ts"     
  ],
  "exclude": ["node_modules"]
}